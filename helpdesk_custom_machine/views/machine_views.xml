<odoo>
    <record id="view_machine_tree" model="ir.ui.view">
        <field name="name">helpdesk.machine.tree</field>
        <field name="model">helpdesk.machine</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="serial_number"/>
                <field name="purchase_date"/>
            </tree>
        </field>
    </record>

    <record id="view_machine_form" model="ir.ui.view">
        <field name="name">helpdesk.machine.form</field>
        <field name="model">helpdesk.machine</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="serial_number"/>
                        <field name="purchase_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
