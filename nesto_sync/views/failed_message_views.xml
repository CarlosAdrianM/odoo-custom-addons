<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de árbol (lista) de mensajes fallidos -->
    <record id="view_nesto_sync_failed_message_tree" model="ir.ui.view">
        <field name="name">nesto.sync.failed.message.tree</field>
        <field name="model">nesto.sync.failed.message</field>
        <field name="arch" type="xml">
            <tree string="Mensajes Fallidos" decoration-danger="state=='failed'" decoration-success="state=='resolved'" decoration-warning="state=='reprocessing'">
                <field name="message_id"/>
                <field name="entity_type"/>
                <field name="error_message"/>
                <field name="retry_count"/>
                <field name="state"/>
                <field name="create_date" string="Fecha de creación"/>
                <field name="last_attempt_date"/>
            </tree>
        </field>
    </record>

    <!-- Vista de formulario de mensajes fallidos -->
    <record id="view_nesto_sync_failed_message_form" model="ir.ui.view">
        <field name="name">nesto.sync.failed.message.form</field>
        <field name="model">nesto.sync.failed.message</field>
        <field name="arch" type="xml">
            <form string="Mensaje Fallido">
                <header>
                    <button name="action_reprocess"
                            string="Reprocesar"
                            type="object"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', 'in', ['resolved', 'reprocessing'])]}"/>
                    <button name="action_mark_resolved"
                            string="Marcar como Resuelto"
                            type="object"
                            attrs="{'invisible': [('state', '=', 'resolved')]}"/>
                    <button name="action_mark_permanently_failed"
                            string="Fallo Permanente"
                            type="object"
                            attrs="{'invisible': [('state', '=', 'permanently_failed')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="failed,reprocessing,resolved"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Aquí se pueden agregar botones smart en el futuro -->
                    </div>

                    <group>
                        <group name="message_info" string="Información del Mensaje">
                            <field name="message_id" readonly="1"/>
                            <field name="entity_type" readonly="1"/>
                            <field name="retry_count" readonly="1"/>
                            <field name="first_attempt_date" readonly="1"/>
                            <field name="last_attempt_date" readonly="1"/>
                        </group>
                        <group name="resolution_info" string="Resolución">
                            <field name="resolved_date" readonly="1" attrs="{'invisible': [('state', 'not in', ['resolved', 'permanently_failed'])]}"/>
                            <field name="resolved_by" readonly="1" attrs="{'invisible': [('state', 'not in', ['resolved', 'permanently_failed'])]}"/>
                            <field name="related_record_model" readonly="1" attrs="{'invisible': [('related_record_model', '=', False)]}"/>
                            <field name="related_record_id" readonly="1" attrs="{'invisible': [('related_record_id', '=', False)]}"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Error" name="error">
                            <group>
                                <field name="error_message" readonly="1" nolabel="1" widget="text"/>
                            </group>
                        </page>
                        <page string="Stack Trace" name="traceback">
                            <group>
                                <field name="error_traceback" readonly="1" nolabel="1" widget="text"/>
                            </group>
                        </page>
                        <page string="Datos Crudos" name="raw_data">
                            <group>
                                <field name="raw_data" readonly="1" nolabel="1" widget="text"/>
                            </group>
                        </page>
                        <page string="Notas de Resolución" name="resolution_notes" attrs="{'invisible': [('state', 'not in', ['resolved', 'permanently_failed'])]}">
                            <group>
                                <field name="resolution_notes" nolabel="1" widget="text"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de búsqueda/filtros -->
    <record id="view_nesto_sync_failed_message_search" model="ir.ui.view">
        <field name="name">nesto.sync.failed.message.search</field>
        <field name="model">nesto.sync.failed.message</field>
        <field name="arch" type="xml">
            <search string="Buscar Mensajes Fallidos">
                <field name="message_id"/>
                <field name="entity_type"/>
                <field name="error_message"/>

                <filter string="Fallidos" name="filter_failed" domain="[('state', '=', 'failed')]"/>
                <filter string="Resueltos" name="filter_resolved" domain="[('state', '=', 'resolved')]"/>
                <filter string="Fallo Permanente" name="filter_permanently_failed" domain="[('state', '=', 'permanently_failed')]"/>

                <separator/>
                <filter string="Clientes" name="filter_cliente" domain="[('entity_type', '=', 'cliente')]"/>
                <filter string="Productos" name="filter_producto" domain="[('entity_type', '=', 'producto')]"/>
                <filter string="Proveedores" name="filter_proveedor" domain="[('entity_type', '=', 'proveedor')]"/>

                <separator/>
                <filter string="Últimas 24h" name="filter_last_24h"
                        domain="[('create_date', '&gt;=', (context_today() - datetime.timedelta(days=1)).strftime('%Y-%m-%d'))]"/>
                <filter string="Última semana" name="filter_last_week"
                        domain="[('create_date', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Agrupar por">
                    <filter string="Estado" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Tipo de Entidad" name="group_entity_type" context="{'group_by': 'entity_type'}"/>
                    <filter string="Fecha de Creación" name="group_create_date" context="{'group_by': 'create_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción de menú -->
    <record id="action_nesto_sync_failed_message" model="ir.actions.act_window">
        <field name="name">Mensajes Fallidos (DLQ)</field>
        <field name="res_model">nesto.sync.failed.message</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_failed': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay mensajes fallidos
            </p>
            <p>
                Los mensajes de sincronización que fallan repetidamente se almacenan aquí.
                Puedes revisar el error, corregir el problema en Odoo o en Nesto, y luego reprocesar el mensaje.
            </p>
        </field>
    </record>

    <!-- Vista de árbol para tracking de reintentos -->
    <record id="view_nesto_sync_message_retry_tree" model="ir.ui.view">
        <field name="name">nesto.sync.message.retry.tree</field>
        <field name="model">nesto.sync.message.retry</field>
        <field name="arch" type="xml">
            <tree string="Tracking de Reintentos" decoration-warning="state=='retrying'" decoration-danger="state=='moved_to_dlq'" decoration-success="state=='success'">
                <field name="message_id"/>
                <field name="entity_type"/>
                <field name="retry_count"/>
                <field name="last_error"/>
                <field name="state"/>
                <field name="first_retry_date"/>
                <field name="last_retry_date"/>
            </tree>
        </field>
    </record>

    <!-- Vista de formulario para tracking de reintentos -->
    <record id="view_nesto_sync_message_retry_form" model="ir.ui.view">
        <field name="name">nesto.sync.message.retry.form</field>
        <field name="model">nesto.sync.message.retry</field>
        <field name="arch" type="xml">
            <form string="Tracking de Reintento">
                <sheet>
                    <group>
                        <group>
                            <field name="message_id" readonly="1"/>
                            <field name="entity_type" readonly="1"/>
                            <field name="state" readonly="1"/>
                        </group>
                        <group>
                            <field name="retry_count" readonly="1"/>
                            <field name="first_retry_date" readonly="1"/>
                            <field name="last_retry_date" readonly="1"/>
                        </group>
                    </group>
                    <group string="Último Error">
                        <field name="last_error" readonly="1" nolabel="1" widget="text"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción de menú para tracking -->
    <record id="action_nesto_sync_message_retry" model="ir.actions.act_window">
        <field name="name">Tracking de Reintentos</field>
        <field name="res_model">nesto.sync.message.retry</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_retrying': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay mensajes en reintentos
            </p>
            <p>
                Esta vista muestra el tracking de mensajes que están siendo reintentados.
            </p>
        </field>
    </record>

    <!-- Menú principal -->
    <menuitem id="menu_nesto_sync_root"
              name="Nesto Sync"
              sequence="100"/>

    <menuitem id="menu_nesto_sync_dlq"
              name="Dead Letter Queue"
              parent="menu_nesto_sync_root"
              sequence="10"/>

    <menuitem id="menu_nesto_sync_failed_messages"
              name="Mensajes Fallidos"
              parent="menu_nesto_sync_dlq"
              action="action_nesto_sync_failed_message"
              sequence="1"/>

    <menuitem id="menu_nesto_sync_retry_tracking"
              name="Tracking de Reintentos"
              parent="menu_nesto_sync_dlq"
              action="action_nesto_sync_message_retry"
              sequence="2"/>

</odoo>
